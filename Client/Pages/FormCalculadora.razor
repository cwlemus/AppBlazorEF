@page "/FormCalculadora"

<h3>FormCalculadora</h3>
<div class="form-group">
    <label>Ingrese numero 1</label>
    <input type="text" @bind="numero1" class="form-control"/>
</div>

<div class="form-group">
    <label>Ingrese numero 2</label>
    <input type="text" @bind="numero2" class="form-control" />
</div>
<button class="btn btn-info" @onclick="sumar">suma</button>
<button class="btn btn-danger" @onclick="restar">Restar</button>
<button class="btn btn-dark" @onclick="multiplicar">Multiplicar</button>

<p>Resultado:@resultado</p>

@code {
    private int numero1 = 0;
    private int numero2 = 0;
    private int resultado = 0;
    public void sumar()
    {
        resultado = numero1 + numero2;
    }
    public void restar()
    {
        resultado = numero1 + numero2;
    }
    public void multiplicar()
    {
        resultado = numero1 + numero2;
    }
}
